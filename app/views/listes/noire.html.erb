
    <!-- Custom styles for this template -->
    <link href="headers.css" rel="stylesheet">
  <!DOCTYPE html>
    <html>
      <head>
     <body>
            <div class="container">
              <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                  <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
                  <span class="fs-4"><strong>Doganam</strong></span>
                </a>

                <ul class="nav nav-pills">
                  <li class="nav-item"><a href="/register" class="btn btn-light">Créer un compte</a></li>

                  <li class="nav-item"><a href="/login" class="btn btn-warning">Connexion</a></li>
              </header>
</head>

        <div class="service_block">
           <div class="service_icon"> <span><img src="images/logo.png" width="250" alt="aide" /></span> </div>
        </div>

  <style>
  @media (max-width: 500px) {
  
  .responsive-table-line td:before { content: attr(data-title); }
  
  .responsive-table-line table, 
  .responsive-table-line thead, 
  .responsive-table-line tbody, 
  .responsive-table-line th, 
  .responsive-table-line td, 
  .responsive-table-line tr { 
  display: block; 
  }
   
  .responsive-table-line thead tr { 
  display:none;
  }
  
  .responsive-table-line td { 
  position: relative;
  border: 0px solid transparent;
  padding-left: 50% !important; 
  white-space: normal;
  text-align:right; 
  }
   
  .responsive-table-line td:before { 
  position: absolute;
  top: 0px;
  left: 0px;
  width: 45%; 
  padding-right: 15px; 
  height:100%;
  white-space: nowrap;
  text-overflow: ellipsis !important;
  overflow:hidden !important;
  text-align:left;
  background-color:#f8f8f8;
  padding:2px;
  }
  
  }
  .invisible{
    display: none;
  }
  </style>

  
  

  <div class="responsive-table-line" style="margin:0px auto;max-width:700px;">  
    <h4><strong>Liste noire</strong></h4>
  <% if @liste.length() == 0 %>
    <div>
      <h3 class="alert-danger">Aucun emprunteur n'est dans la liste noire</h3>
    </div>
  <% else %>
  <div class="table-responsive">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">
  <thead>
  <tr>
  <th>Pseudo</th>
  <th>Nom </th>
  <th>Prénoms</th>
  <th>Sexe</th>
  <th>Age</th>
  <th>Quartier</th>
  <th>Numéro de téléphone</th>
  <th>Montant</th>
  <th>Date de limite</th>
  <th>Photos</th>
</thead>
  <tbody>
  <% @liste.each do |ligne| %>
  <% puts ligne.amount_borrowed %>

  <tr>
    <td data-title="pseudo"><%= ligne.pseudo %></td>
    <td data-title="nom"><%= ligne.nom %></td>
    <td data-title="prenoms"><%= ligne.prenoms %></td>
    <td data-title="sexe"><%= ligne.sexe %></td>
    <td data-title="age"><%= ligne.age %></td>
    <td data-title="quartier"><%= ligne.quartier %></td>
    <td data-title="phone"><%= ligne.lender_phone %></td>
    <td data-title="amount"><%= ligne.amount_borrowed %></td>
    <td data-title="date_limite"><%= Utilisateur.toString ligne.repayment_date %></td>
    <td data-title="document_url"><%= ligne.id_document_url %></td>
  </tr>
  <%end%>
   </tbody>
  </table>
  </div>
  <% end %>
  </div>
</body>
</html>